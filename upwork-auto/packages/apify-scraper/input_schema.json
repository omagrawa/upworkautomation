{
  "title": "Upwork Job Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "searchQuery": {
      "title": "Search Query",
      "type": "string",
      "description": "Job search query (e.g., 'React developer', 'Python automation')",
      "default": "React developer"
    },
    "maxResults": {
      "title": "Maximum Results",
      "type": "integer",
      "description": "Maximum number of jobs to scrape",
      "default": 50,
      "minimum": 1,
      "maximum": 200
    },
    "webhookUrl": {
      "title": "Webhook URL",
      "type": "string",
      "description": "URL to send scraped data via webhook",
      "default": "http://localhost:5678/webhook/upwork-jobs"
    },
    "filters": {
      "title": "Job Filters",
      "type": "object",
      "description": "Additional filters for job search",
      "properties": {
        "jobType": {
          "title": "Job Type",
          "type": "string",
          "enum": ["all", "hourly", "fixed"],
          "default": "all"
        },
        "experienceLevel": {
          "title": "Experience Level",
          "type": "string",
          "enum": ["all", "entry", "intermediate", "expert"],
          "default": "all"
        },
        "budgetMin": {
          "title": "Minimum Budget",
          "type": "number",
          "description": "Minimum budget for fixed-price jobs",
          "default": 0
        },
        "budgetMax": {
          "title": "Maximum Budget",
          "type": "number",
          "description": "Maximum budget for fixed-price jobs",
          "default": 10000
        }
      }
    }
  },
  "required": ["searchQuery", "webhookUrl"]
}
