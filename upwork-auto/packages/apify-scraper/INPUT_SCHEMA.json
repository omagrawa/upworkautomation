{
  "title": "Upwork Job Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "searches": {
      "title": "Search URLs",
      "type": "array",
      "description": "Array of Upwork search URLs with filters applied",
      "editor": "select",
      "items": {
        "type": "string",
        "enum": [
          "https://www.upwork.com/nx/search/jobs/?q=react%20developer&sort=recency",
          "https://www.upwork.com/nx/search/jobs/?q=devops%20n8n&sort=recency"
        ]
      },
      "uniqueItems": true,
      "default": [
        "https://www.upwork.com/nx/search/jobs/?q=react%20developer&sort=recency"
      ]
    },
    "sessionCookie": {
      "title": "Session Cookie",
      "type": "string",
      "description": "Raw cookie string from Upwork session (e.g., odesk=...; session=...)",
      "editor": "textfield",
      "default": ""
    },
    "maxPagesPerSearch": {
      "title": "Maximum Pages Per Search",
      "type": "integer",
      "description": "Maximum number of pages to scrape per search URL",
      "editor": "number",
      "default": 3,
      "minimum": 1,
      "maximum": 10
    },
    "fetchDetails": {
      "title": "Fetch Job Details",
      "type": "boolean",
      "description": "Whether to fetch detailed information for each job",
      "editor": "checkbox",
      "default": true
    },
    "maxConcurrency": {
      "title": "Maximum Concurrency",
      "type": "integer",
      "description": "Maximum number of concurrent requests",
      "editor": "number",
      "default": 5,
      "minimum": 1,
      "maximum": 20
    },
    "requestDelay": {
      "title": "Request Delay (ms)",
      "type": "integer",
      "description": "Delay between requests in milliseconds",
      "editor": "number",
      "default": 2000,
      "minimum": 1000,
      "maximum": 10000
    }
  },
  "required": ["searches", "sessionCookie"]
}
