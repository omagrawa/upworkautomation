{
  "name": "upwork-auto",
  "version": "1.0.0",
  "description": "Upwork automation pipeline with Apify scrapers, n8n workflows, and Google Sheets integration",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "fmt": "prettier --write \"**/*.{js,ts,json,md}\"",
    "lint": "eslint \"**/*.{js,ts}\" --fix",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
